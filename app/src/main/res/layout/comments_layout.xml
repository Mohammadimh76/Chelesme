<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Face emotion -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/LL_FaceEmotion"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/happy_face" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/timesbd_0"
                    android:text="Happy"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>

                <ProgressBar
                    android:id="@+id/LinearProgressBar_happy_face"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    app:theme="@style/ProgressBarThemeHappy_face"
                    android:layout_width="170dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="45%"
                    android:fontFamily="@font/timesbd_0"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/indifferent_face" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/timesbd_0"
                    android:text="Indifferent"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>

                <ProgressBar
                    android:id="@+id/LinearProgressBar_indifferent_face"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    app:theme="@style/ProgressBarThemeIndifferent_face"
                    android:layout_width="170dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="35%"
                    android:fontFamily="@font/timesbd_0"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/angry_face" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/timesbd_0"
                    android:text="Angry"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>

                <ProgressBar
                    android:id="@+id/LinearProgressBar_angry_face"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    app:theme="@style/ProgressBarThemeAngry_face"
                    android:layout_width="170dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="20%"
                    android:fontFamily="@font/timesbd_0"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </LinearLayout>


        

    </ScrollView>




</RelativeLayout>